# ===========================================
# Environment variables — copy to .env.local
# ===========================================
# Copy this file:  cp .env.example .env.local
# Then add your real keys. Never commit .env.local
#
# See src/docs/supabase-setup.md and INTEGRATIONS.md for setup guide.

# OpenAI (drafting, extraction, voice)
OPENAI_API_KEY=

# Supabase (Document Intake — server-only)
# From Project Settings > API in Supabase dashboard
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_sb_secret_or_service_role_key

# Supabase anon key — required for Clerk + RLS (createSupabaseClientForClerk)
# Same "anon" / "public" key from Project Settings > API. Server-only use.
SUPABASE_ANON_KEY=your_sb_anon_public_key

# Client-side Supabase (Auth, Realtime) — uncomment when adding client-side features
# Used by: src/lib/supabase-client.ts
# NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
# NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=your_sb_publishable_or_anon_key

# Clerk (authentication)
# From API keys page in Clerk dashboard
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=
# Sign-in / sign-up page and redirects (per auth-flow-prd)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL=/workspace
NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL=/onboarding

# Clerk Billing webhooks (payments)
# Signing secret for the Clerk → app webhook endpoint.
# Get this from Clerk Dashboard → Webhooks → your billing webhook endpoint → Signing secret.
# NEVER commit the real value; set it only in .env.local and Vercel env vars.
CLERK_WEBHOOK_SECRET=

# n8n (workflow automation — lesson 5.2, 5.4, 5.5)
# Webhook URL from n8n workflow (lesson 5.4)
# Get this from n8n Webhook Trigger node → Production URL
N8N_FEEDBACK_WEBHOOK_URL=

# n8n webhook secret (lesson 5.5)
# Generate with: openssl rand -hex 32
# Add this same secret to n8n HTTP Request node header: X-API-Key
# NEVER commit this value to Git
N8N_WEBHOOK_SECRET=
